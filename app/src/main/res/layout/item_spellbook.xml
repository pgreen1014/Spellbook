<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/spellbook_character_name_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Vrondiss Frostwind"/>

    <TextView
        android:id="@+id/spellbook_character_race_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_below="@id/spellbook_character_name_TextView"
        android:textSize="18sp"
        tools:text="Dragonborn"/>

    <TextView
        android:id="@+id/spellbook_character_class_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_below="@id/spellbook_character_race_TextView"
        android:textSize="18sp"
        tools:text="Sorcerer"/>

    <TextView
        android:id="@+id/spellbook_character_level_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/spellbook_character_class_TextView"
        android:layout_below="@id/spellbook_character_race_TextView"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        tools:text="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/spellbook_character_class_TextView"
        android:background="#DCDCDC"/>

</RelativeLayout>